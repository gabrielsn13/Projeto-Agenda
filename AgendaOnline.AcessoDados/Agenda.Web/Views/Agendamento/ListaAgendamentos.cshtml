@model IEnumerable<AgendaOnline.Dominio.ListagemAgendamento>

@{
    ViewBag.Title = "Agendamentos";
}



    <p>
        @Html.ActionLink("Novo", "CadastrarAgendamento")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CODIGO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TITULO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SALA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CLIENTE)
            </th>       
            <th>
                @Html.DisplayNameFor(model => model.OBSERVACOES)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CODIGO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TITULO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SALA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CLIENTE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OBSERVACOES)
            </td>
            <td>           
                @Html.ActionLink("Concluir Agendamento", "ExcluirAgendamento", new {  id=item.CODIGO  })
            </td>
        </tr>
    }
    
    </table>

