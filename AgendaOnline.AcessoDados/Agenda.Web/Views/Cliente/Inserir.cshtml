@model Agenda.Web.ViewModels.ClienteViewModel

@{
    ViewBag.Title = "Inserir";
}

<h2>Cadastro Cliente</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Preencha os dados do cliente</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <div class="control-label col-md-2">
            @Html.Label("TIPO DE CLIENTE:")
        </div>
        <div class="col-md-10">
            @Html.DropDownList("TipoCliente", "Selecione um tipo")
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">
            @Html.Label("CPF / CNPJ:")
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.CPF_CNPJ, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CPF_CNPJ, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">
            @Html.Label("NOME:")
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NOME, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NOME, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">
            @Html.Label("SOBRENOME:")
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SOBRENOME, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SOBRENOME, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">
            @Html.Label("CONJUGE:")
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.CONJUGE, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CONJUGE, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">
            @Html.Label("PROFISSÃO:")
        </div>
        <div class="col-md-10">
            @Html.DropDownList("Cbo", "Selecione uma Prifissão")
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">
            @Html.Label("CIDADE:")
        </div>
        <div class="col-md-10">
            @Html.DropDownList("Cidade", "Selecione uma Cidade")
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Inserir" class="btn btn-default" />
        </div>
    </div>
</div>
    }

    <div>
        @Html.ActionLink("Voltar", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

