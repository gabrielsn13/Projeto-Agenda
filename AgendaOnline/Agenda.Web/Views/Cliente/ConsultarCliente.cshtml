
@{
    ViewBag.Title = "ConsultarCliente";
}

<h2>Consultar</h2>

@using (Html.BeginForm("ConsultarCliente", "Cliente", FormMethod.Post))
{
<div class="form-horizontal">
    <div class="form-group">
        @Html.Label("Cpf do cliente: ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Editor("cpf", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <p><input type="submit" value="Consultar" /></p>
        </div>
    </div>
</div>
    }

